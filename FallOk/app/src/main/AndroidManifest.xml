<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.android.explicitintent">

    <!--Permisos de Android  -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/hojas"
        android:label="FallOk"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:logo="@mipmap/hojas">

        <activity android:name="com.example.android.explicitintent.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.action.SplashProgress_Activity"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.android.explicitintent.ChildActivity">
        </activity>
        <activity android:name=".Carga_Numeros"></activity>
        <activity android:name=".Datos"></activity>
        <activity android:name=".Bluetooth"></activity>

    </application>

</manifest>