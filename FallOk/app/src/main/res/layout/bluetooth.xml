<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimarySoft">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Dispositivos Bluetooth"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/InnerRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/BuscaDispositivos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight= "1"
            android:text="Buscar Dispositivos"   />

        <ListView
            android:id="@+id/ListaDispositivosBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/BuscaDispositivos"
            android:layout_above="@+id/ApagarBt" />

        <Button
            android:id="@+id/ApagarBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight= "1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Apagar dispositivo" />



</RelativeLayout>

</LinearLayout>