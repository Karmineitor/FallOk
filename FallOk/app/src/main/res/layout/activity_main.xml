<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimarySoft"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:weightSum="1">

    <ImageView
        android:layout_width="143dp"
        android:layout_height="0dp"
        android:src="@mipmap/hojas"
        android:layout_gravity="center"
        android:scaleType="center"
        android:layout_weight="0.27" />

    <Button
        android:id="@+id/b_do_something_cool"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="15dp"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enlazar dispositivo"
        android:background="@drawable/boton"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/b_Datos"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/boton"
        android:backgroundTint="@color/colorPrimary"
        android:text="Tus Datos"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/b_NConfianza"
        android:layout_width="239dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/boton"
        android:onClick="onClickOpenNumerosButton"
        android:backgroundTint="@color/colorPrimary"
        android:text="NÃºmeros de confianza"
        />


</LinearLayout>
